    "test": "jest",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "default": "./dist/esm/index.js",
      "package.json": "./package.json"
    }
  }
