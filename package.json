{
  "name": "xjmapper",
  "version": "2.0.1",
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.js",
  "typings": "./dist/types/index.d.ts",
  "author": "dpohvar@gmail.com",
  "scripts": {
    "build:clean": "rimraf ./dist",
    "build:compile": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
